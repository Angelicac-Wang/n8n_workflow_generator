          },
          "position": {
            "x": 800,
            "y": 300
          }
        },
        {
          "id": "5",
          "label": "Send Voice Response",
          "nodeType": "n8n-nodes-base.telegram",
          "params": {
            "botToken": "={{$credentials.telegramApiKey}}",
            "chatId": "={{$json[\"message\"][\"chat\"][\"id\"]}}",
            "message": "={{$node[\"OpenAI Chat\"].json[\"choices\"][0][\"text\"]}}",
            "sendAsVoice": true
