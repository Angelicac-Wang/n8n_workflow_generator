            "fields": {
              "addField": [
                {
                  "name": "invoiceData",
                  "value": "={{ { customerName: $json[\"name\"], orderId: $json[\"order_id\"], date: new Date().toISOString(), items: $json[\"items\"], total: $json[\"total\"] } }}"
